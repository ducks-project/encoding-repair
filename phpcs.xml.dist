<?xml version="1.0"?>
<ruleset name="duck" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="vendor/squizlabs/php_codesniffer/phpcs.xsd">
  <description>Make this project use the PSR-12 coding standard.</description>
  <rule ref="PSR12" />

  <exclude-pattern>/vendor/*</exclude-pattern>
  <exclude-pattern>/tests/*\.php$</exclude-pattern>
  <exclude-pattern>/examples/*\.php$</exclude-pattern>
  <exclude-pattern>/coverage/*</exclude-pattern>
  <exclude-pattern>/.history/*</exclude-pattern>
  <exclude-pattern>/site/*</exclude-pattern>
</ruleset>
