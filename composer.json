{
    "name": "ducks-project/encoding-repair",
    "description": "A robust, immutable, and extensible PHP library to handle charset conversion, detection, and repair (Double Encoding) with safe JSON wrappers. Optimized for Legacy ISO-8859-1 to UTF-8 migrations.",
    "license": "MIT",
    "type": "library",
    "keywords": [
        "charset",
        "encoding",
        "utf8",
        "iso-8859-1",
        "cp1252",
        "windows-1252",
        "conversion",
        "unicode",
        "repair",
        "json",
        "chain-of-responsibility",
        "legacy",
        "transcode"
    ],
    "authors": [
        {
            "name": "Adrien Loyant",
            "email": "donald_duck@team-df.org",
            "homepage": "http://adrien.loyant.net",
            "role": "Owner"
        }
    ],
    "homepage": "https://github.com/ducks-project/encoding-repair/",
    "support": {
        "email": "adrien.loyant@gmail.com"
    },
    "require": {
        "php": ">=7.4",
        "ext-json": "*",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "ergebnis/composer-normalize": "^2.48",
        "friendsofphp/php-cs-fixer": "^3.0",
        "phpbench/phpbench": "^1.2",
        "phpmd/phpmd": "^1.5",
        "phpstan/phpstan": "^1.10",
        "phpstan/phpstan-phpunit": "^1.4",
        "phpunit/phpunit": "^9.5 || ^10.0",
        "squizlabs/php_codesniffer": "^3.10",
        "vimeo/psalm": "^4.30 || ^5.0"
    },
    "suggest": {
        "ext-fileinfo": "For advanced encoding detection",
        "ext-iconv": "For iconv conversion with transliteration support",
        "ext-intl": "For UConverter support (best performance and precision [30% faster])"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Ducks\\Component\\EncodingRepair\\": ""
        },
        "exclude-from-classmap": [
            "/tests/"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Ducks\\Component\\EncodingRepair\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "composer/package-versions-deprecated": true,
            "ergebnis/composer-normalize": true
        },
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "extra": {
        "duck": {
            "status": "validated"
        }
    },
    "scripts": {
        "bench": "./vendor/bin/phpbench run tests/benchmark/ --report=aggregate --retry-threshold=5",
        "phpcs": "./vendor/bin/phpcs --standard=phpcs.xml.dist .",
        "phpcsfixer-check": "./vendor/bin/php-cs-fixer fix --dry-run --diff",
        "phpmd": "./vendor/bin/phpmd . github phpmd.xml.dist --exclude 'tests/*,vendor/*,.history/*'",
        "phpstan": "./vendor/bin/phpstan analyse --configuration phpstan.neon.dist",
        "psalm": "./vendor/bin/psalm --config=psalm.xml.dist --no-cache --no-file-cache --shepherd",
        "rector": "./vendor/bin/rector process . --dry-run",
        "test": [
            "@unittest",
            "@bench"
        ],
        "unittest": "XDEBUG_MODE=coverage ./vendor/bin/phpunit tests/phpunit --process-isolation -c phpunit.xml.dist"
    },
    "scripts-descriptions": {
        "test": "Run all tests!"
    }
}
